<% if user_signed_in? %>
	<h4>Add a review:</h4>
	<%= form_for([@product, @product.comments.build], remote: true) do |f| %>
		<p>
			<%= f.label :body, "Comments", :class => "rating-name" %><br>
			<%= f.text_area :body, :class => "form-control" %>
		</p>
		<p>
			<%= f.label :rating, :class => "rating-name" %><div class="rating">
			</div>
		</p>
		<p>
			<%= f.submit "Submit", :class => "btn btn-default" %>
		</p>
	<% end %>
<% end %>